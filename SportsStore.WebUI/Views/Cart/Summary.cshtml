@model SportsStore.Domain.Entities.Cart

<div id="cart">
    <span class="caption">
        <b>Your cart:</b>
        <br/>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        <br/>
        @Model.ComputeTotalValue().ToString("c")
    </span>
    <br />
    @Html.ActionLink("Checkout", "Index", "Cart", new
    {
        returnUrl =
    Request.Url.PathAndQuery
    }, null)
</div>

